//- Extending from the main template :: base.pug
extends layouts/base.pug


//- Page Content
block content
	div(id="sg-content")
		.page(id="sg-select-menus")
			.inner
				.sg-heading.sg
					h1.grey Select Menus




				.select-menus-group
					.select-group
						select.custom-select
							option(selected) Open this select menu
							option(value="1") One
							option(value="2") Two
							option(value="3") Three
							option(value="4") Four

					.select-group
						select.custom-select(multiple)
							option(selected) Open this select menu
							option(value="1") One
							option(value="2") Two
							option(value="3") Three
							option(value="4") Four




